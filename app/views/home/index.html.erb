<!--Área de pesquisa da Home-->
<div class="jumbotron">
  <div class="container" align="center">
    <img alt="mei" src="/assets/bonecomeis.png" />
    <h1 style="color: #104185">Encontre os MEIs de forma rápida e fácil</h1>
    <p style="color: #104185">Ache os serviços ou produtos que você precisa e que estão sendo oferecidos pelos MEIs na Cidade do Recife</p>
    <div id="navbar" class="navbar-collapse collapse">
      <form class="navbar-form">
        <div class="row" align="center">
          <div class="col-md-12">
            <div class="form-group">
              <%= render "layouts/search_form" %>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!--Apresentação dos MEI's pesquisados/cadastrados-->
<div class="row">
  <% if @meis.present? %>
    <% @meis.each do |mei| %>
      <div class="col-xs-6 col-md-3">
        <div class="thumbnail">
          <%= image_tag("figureMEI.jpg", class:"img-rounded", alt:"MEIs") %>
          <div class="caption">
            <h3><%= mei.nome %></h3>
            <p><strong>Descricao da atividade: <%= @teste %> </strong></p>
            <%= mei.descricao_atividade %>
            <%= link_to 'Mostrar Mais', mei, class: 'btn btn-sm btn-primary'%>
          </div>
        </div>
      </div>
    <% end %>
    <%= will_paginate @meis, renderer: BootstrapPagination::Rails %>
  <% elsif @meis == [] %>
    <!--Mensagem de erro no caso de existir resultado-->
    <div class="col-md-6 col-md-offset-3">
      <script>
        function funcao1(){
          alert("Não encontramos nenhum mei para esta pesquisa.");
        }
        funcao1();
      </script>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong>Ops!</strong> Não encontramos nenhum mei para esta pesquisa.
    </div>
    </div>
  <% end %>
</div>

