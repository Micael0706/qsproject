<div class="row">
    <!-- < % if @meis != nil %> -->
    <% if @meis.present? %>
    
      <% @meis.each do |mei| %>
      
      <div class="col-xs-6 col-md-3">
        <div class="thumbnail">
          <img src="..." alt="...">
          <div class="caption">
            <h3><%= mei.nome %></h3>
            <p><strong>Descricao da atividade: <%= @teste %> </strong></p>
            <%= mei.descricao_atividade %>
            <%= link_to 'Mostrar Mais', mei, class: 'btn btn-sm btn-primary'%>
          </div>
        </div>
      </div>
      <% end %>
      <%= will_paginate @meis, renderer: BootstrapPagination::Rails %>
    <% elsif @meis == [] %>
    <div class="col-md-6 col-md-offset-3">
          <script>
          function funcao1(){
            alert("Não encontramos nenhum mei para esta pesquisa.");
          }
          funcao1();
          </script>
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Ops!</strong> Não encontramos nenhum mei para esta pesquisa.
          </div>
    </div>
    <% end %>

</div>

