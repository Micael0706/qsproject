<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading"><h4 style="color: white"><center>Crie uma conta</center></h4></div>
    <div class="panel-body">
      <% if alert %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-times-circle-o"></i></span></button>
          <center><%= alert %></center>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="field">
          <div class="input-group margin-bottom-sm">
            <span class="input-group-addon"><i class="fa fa-at fa-fw"></i></span>
            <%= f.text_field :email, :placeholder => "Email", class: "form-control", autofocus: true %>
          </div>
        </div><p></p>
        
        <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><span class="fa fa-lock fa-fw"></span></span>
          <%= f.password_field :password, :placeholder => "Senha - No mÃ­nimo 8 caracteres", class: "form-control", autocomplete: "off" %>
        </div><p></p>
        
        <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><span class="fa fa-lock fa-fw"></span></span>
          <%= f.password_field :password_confirmation, :placeholder => "Repita a senha", class: "form-control", autocomplete: "off" %>
        </div><p></p>

        <div class="actions">
          <%= f.submit "Criar", :class => 'btn-submit btn btn-lg btn-primary btn-block' %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
        </div>
    </div>
  </div>
</div>