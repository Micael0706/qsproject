<%= form_tag("/meis", :method=> "get", :id=> "search_form") do %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Digite o nome ou atividade do MEI"%>
    <%= select_tag(:category, options_from_collection_for_select(Occupation.all, :id, :area, :selected => params[:category]), prompt: 'Todas as categorias', class: "form-control") %>
    <%= select_tag(:job, options_from_collection_for_select(Job.all, :id, :nome, :selected => params[:job]), prompt: 'Todas as atividades', class: "form-control") %>
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
    <i class="fa fa-search"></i>
    <% end %>
<% end %>