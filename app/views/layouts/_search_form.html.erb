<%= form_tag("/meis", :method=> "get", :id=> "search_form") do %>
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Pesquise"%>
        <%= select_tag(:category, options_from_collection_for_select(Occupation.all, :id, :area, :selected => params[:category]), prompt: 'Todas as categorias', class: "form-control", id: 'category') %>
        <%= select_tag(:job, options_from_collection_for_select(Job.all, :id, :nome, :selected => params[:job]), prompt: 'Todas as atividades', class: "form-control", id: 'job') %>
        <%= submit_tag "Pesquise", class: "btn btn-primary"%>
<% end %>